                    <a class="product" href="/Admin/SanPham"><button class="fa-brands fa-product-hunt phu"></button></a>
                    <h2 id="name">Sản phẩm</h2>
                </div>
                <div class="sanpham2 ">
                    <a class="product" href="/Admin/NhanHieu"><button class="fa-brands fa-bootstrap phu"></button></a>
                    <h2 id="name">Nhãn hiệu</h2>
                </div>
            </div>

        </div>
        <div class="khachhang">
            <h3 class="title" style="margin-top:30px;">Bán hàng</h3>
            <div class="chia">
                <div class="khachhang1 ">
                    <a class="product" href="/Admin/KhachHang"><button class="fa fa-user phu"></button></a>
                    <h2 id="name">Khách hàng</h2>
                </div>
                <div class="khachhang2 ">
                    <a class="product" href="/Admin/HoaDon"><button <i class="fa fa-shopping-bag phu"></i></button></a>
                    <h2 id="name">Đơn đặt hàng</h2>
                </div>
            </div>
        </div>
        <div class="nhanvien">
            <h3 class="title" style="margin-top:30px;">Nhân viên</h3>
            <div class="chia">
                <div class="Staff ">
                    <a class="Staff-1" href="/Admin/Admin"><button><i class="fa-regular fa-clipboard-user phu"></i></button></a>
                    <h2 id="name">Nhân viên</h2>
                </div>


            </div>
            </div>
