@model QuanLyBanHang_KutsuSneakers.Models.KHACHHANG

@{
    ViewBag.Title = "XoaKH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .dl-horizontal {
        padding-left: 20px;
        padding-right: 20px;
    }

    dt {
        display: inline;
    }

    h2 {
        padding-top: 120px;
        text-align: center;
    }

    p {
        padding-left: 20px;
        padding-right: 20px;
    }
</style>
<body>
    <h2>XÁC NHẬN THÔNG TIN KHÁCH HÀNG CẦN XÓA</h2>

    <h3>Bạn có chắc muốn xóa sản phẩm này ?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên khách hàng:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TENKH)
            </dd>
            <dt>
                UserName:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.USERNAME)
            </dd>
            <dt>
                Password:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MATKHAU)
            </dd>
            <dt>
                Địa Chỉ
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DIACHI)
            </dd>
            <dt>
                Số điện thoại
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SDT)
            </dd>
            <dt>
                Email:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EMAIL)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa sản phẩm" class="btn btn-default" /> |
                @Html.ActionLink("Trở về trang quản lý sản phẩm", "SanPham")
            </div>
        }
    </div>
</body>