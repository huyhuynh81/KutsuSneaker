@model QuanLyBanHang_KutsuSneakers.Models.ADMIN

@{
    ViewBag.Title = "XoaAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .container-1 {
        height: 100%;
        display: flex;
        align-items: center;
        position: relative;
    }

    .buttons {
        position: absolute;
        right: 2%;
    }

    .btn {
        text-decoration: none;
        padding: 10px 20px;
        font-size: 1.25rem;
        position: relative;
        margin: 32px;
    }

    .btn-1 {
        background: #000;
        color: #fff;
        transition: transform 0.3s ease;
    }

        .btn-1::after, .btn-1::before {
            content: "";
            position: absolute;
            opacity: 0.3;
            background: #000;
            width: 100%;
            height: 100%;
            left: 0;
            bottom: 0;
            z-index: -1;
            transition: transform 0.3s ease;
        }

        .btn-1:hover {
            transform: translate(-12px,-12px);
        }

            .btn-1:hover::after {
                transform: translate(6px,6px);
            }

            .btn-1:hover::before {
                transform: translate(12px,12px);
            }

    .btn-2 {
        color: #000;
    }

        .btn-2::after, .btn-2::before {
            border: 3px solid black;
            content: "";
            position: absolute;
            width: calc(100% - 6px);
            height: calc(100% - 6px);
            left: 0;
            bottom: 0;
            transition: transform 0.3s ease;
        }

        .btn-2:hover::after {
            transform: translate(-5px,-5px);
        }

        .btn-2:hover::before {
            transform: translate(5px,5px);
        }

    .2{

    }
    .1 {
        padding: 134px;
    }
</style>
